<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.youchip.youmobile.ReportDetails">

    <LinearLayout
        android:id="@+id/soldItemsView"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/report_details_sold_label"
            android:paddingTop="5dp" />

        <ListView
            android:id="@+id/soldItemsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="0dp"
            android:listSelector="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/canceledItemsView"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/detailsSeparator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/report_details_canceled_label"
            android:paddingTop="5dp" />

        <ListView
            android:id="@+id/canceledItemsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingRight="10dp"
            android:paddingBottom="0dp"
            android:listSelector="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>
